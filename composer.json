{
    "name": "benrowe/stateflow",
    "description": "A flexible state machine library for PHP",
    "type": "library",
    "keywords": ["state-machine", "workflow", "state", "transition"],
    "license": "MIT",
    "authors": [
        {
            "name": "Ben Rowe",
            "email": "ben.rowe.83@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2"
    },
    "require-dev": {
        "brianium/paratest": "^7.4",
        "esi/phpunit-coverage-check": "^2.0",
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpmd/phpmd": "^2.15",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "BenRowe\\StateFlow\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BenRowe\\StateFlow\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "paratest --processes=4",
        "test:single": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage",
        "test:coverage:ci": [
            "phpunit --coverage-clover clover.xml",
            "coverage-check clover.xml 20"
        ],
        "quality": [
            "phpmd src text phpmd.xml.dist",
            "phpstan analyse"
        ],
        "lint": "php-cs-fixer fix --dry-run --diff",
        "lint:fix": "php-cs-fixer fix",
        "check": [
            "@lint",
            "@quality",
            "@test"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
